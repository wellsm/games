		"husky": "^9.1.7",
		"ultracite": "^6.3.10"
	},
	"dependencies": {
		"@ez4/docs-gateway-ui": "file:.yalc/@ez4/docs-gateway-ui",
		"@ez4/local-common": "file:.yalc/@ez4/local-common",
