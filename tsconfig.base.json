{
  "compilerOptions": {
    "target": "es2024",
    "moduleResolution": "bundler",
    "module": "preserve",
    "strict": true,
    "sourceMap": true,
    "composite": true,
    "preserveConstEnums": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules"]
}
